<!-- Validation failure messages -->

<% if @plant.errors.any? %>
  <% @plant.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Plant "<%= @plant.display_name %>"</h3>
      </div>
      <div class="panel-body">
        <form action="/update_plant/<%= @plant.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for category -->
          <div class="form-group">
            <label for="category" class="col-sm-2 control-label">
              Container Size:
            </label>
            <div class="col-sm-10">
              <input type="text" id="category" name="category" placeholder="Category" class="form-control" value="<%= @plant.category %>">
            </div>
          </div>

          <!-- Label and input for pic -->
          <div class="form-group">
            <label for="pic" class="col-sm-2 control-label">
              Pic:
            </label>
            <div class="col-sm-10">
              <input type="text" id="pic" name="pic" placeholder="Pic" class="form-control" value="<%= @plant.pic %>">
            </div>
          </div>

          <!-- Label and input for dbw -->
          <div class="form-group">
            <label for="dbw" class="col-sm-2 control-label">
              Days Between Water:
            </label>
            <div class="col-sm-10">
              <input type="text" id="dbw" name="dbw" placeholder="Dbw" class="form-control" value="<%= @plant.dbw %>">
            </div>
          </div>

          <!-- Label and input for display_name -->
          <div class="form-group">
            <label for="display_name" class="col-sm-2 control-label">
              Display Name:
            </label>
            <div class="col-sm-10">
              <input type="text" id="display_name" name="display_name" placeholder="Display name" class="form-control" value="<%= @plant.display_name %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Plant
              </button>
              or
              <a href="/plants/<%= @plant.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
