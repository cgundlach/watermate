<!-- Validation failure messages -->

<% if @user_plant.errors.any? %>
  <% @user_plant.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Water my <%= @user_plant.plant.display_name %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_user_plant/<%= @user_plant.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <dt>Plant:</dt>
          <dd><%= @user_plant.plant.full_name %></dd>

          <dt>Needs Water Every <%= @user_plant.plant.try(:dbw) %> Days </dt>

          <!-- Label and input for water -->

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Give 'em a Drink!
              </button>
              or
              <a href="/user_plants/<%= @user_plant.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
